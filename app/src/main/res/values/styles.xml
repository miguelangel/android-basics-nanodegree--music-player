<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorPrimaryDark">#689F38</item>
        <item name="colorAccent">#FFC107</item>
    </style>

    <!-- Activity description -->
    <style name="ActivityDescriptionTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Album cover image view style within albums list -->
    <style name="AlbumCoverImageView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Album title text view style  within albums list -->
    <style name="AlbumTitleTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Album artist text view style  within albums list -->
    <style name="AlbumArtistTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Album cover image view style once the album has been selected -->
    <style name="AlbumSelectedCoverImageView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Album more details once the album has been selected -->
    <style name="AlbumMoreDetailsTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Song lineal layout for a selected album -->
    <style name="SongLinearLayout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#DCEDC8</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Song number for a selected album -->
    <style name="SongNumberTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Song title for a selected album -->
    <style name="SongTitleTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Song length for a selected album -->
    <style name="SongLengthTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
